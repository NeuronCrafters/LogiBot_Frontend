# Dockerfile.dev
FROM node:22-alpine

WORKDIR /app

# Instala dependências apenas quando não existem node_modules
COPY package*.json ./
RUN npm install

# Copia os arquivos da aplicação
COPY . .

# Expõe a porta usada pelo Vite
EXPOSE 5173

# Comando padrão: inicia o servidor de desenvolvimento
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]
